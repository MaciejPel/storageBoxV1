generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  username   String      @unique
  password   String      @db.String
  verified   Boolean?    @default(false)
  banned     Boolean?    @default(false)
  characters Character[]
  media      Media[]     @relation(name: "mediaAuthors")
  likedMedia Media[]     @relation(name: "mediaLikes")
}

model Character {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  mediaIds    String[] @map("categoryIDs") @db.ObjectId
  media       Media[]  @relation(fields: [mediaIds], references: [id])
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String   @db.ObjectId
}

model Media {
  id           String      @id @default(auto()) @map("_id") @db.ObjectId
  hash         String
  fileName     String
  fileType     String
  likes        User        @relation(fields: [likeId], references: [id], name: "mediaLikes")
  likeId       String      @db.ObjectId
  characterIDs String[]    @map("postIDs") @db.ObjectId
  characters   Character[] @relation(fields: [characterIDs], references: [id])
  author       User        @relation(fields: [authorId], references: [id], name: "mediaAuthors")
  authorId     String      @db.ObjectId
}
